+class Profile;
+
+struct Container {
+  std::string id;
+  std::string name;
+  std::string icon;
+  std::string color;
+  // cookie_store_id is often used by extensions (e.g. "firefox-container-1")
+  std::string cookie_store_id; 
+
+  bool operator==(const Container& other) const {
+    return id == other.id;
+  }
+};
