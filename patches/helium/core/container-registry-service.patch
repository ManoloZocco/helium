+  const Container* GetContainerById(const std::string& id) const;
+  std::vector<Container> GetAllContainers() const;
+  bool DeleteContainer(const std::string& id);
+
+  class Observer : public base::CheckedObserver {
+   public:
+    virtual void OnContainerCreated(const Container& container) {}
+    virtual void OnContainerDeleted(const Container& container) {}
