+// HELIUM
+#include "chrome/browser/ui/containers/container_tab_helper.h"
+#include "content/public/browser/web_contents.h"
+#include "chrome/browser/profiles/profile.h"
+#include "chrome/browser/containers/container_registry.h"
+
+WEB_CONTENTS_USER_DATA_KEY_IMPL(ContainerTabHelper);
+
+ContainerTabHelper::ContainerTabHelper(content::WebContents* web_contents)
+    : content::WebContentsObserver(web_contents),
+      content::WebContentsUserData<ContainerTabHelper>(*web_contents) {}
+
+ContainerTabHelper::~ContainerTabHelper() = default;
+
+bool ContainerTabHelper::GetContainerColor(SkColor* color) const {
+  Profile* profile = Profile::FromBrowserContext(GetWebContents().GetBrowserContext());
+  auto* registry = ContainerRegistry::Get(profile);
+  if (!registry) return false;
+
+  std::string id = GetWebContents().GetContainerId();
+  if (id.empty()) return false;
+
+  const Container* container = registry->GetContainerById(id);
+  if (!container) return false;
+
+  // Parse color string to SkColor (simplification)
+  if (container->color == "blue") *color = SK_ColorBLUE;
+  else if (container->color == "red") *color = SK_ColorRED;
+  else if (container->color == "green") *color = SK_ColorGREEN;
+  else if (container->color == "orange") *color = 0xFFFFA500;
+  else *color = SK_ColorGRAY;
+  
+  return true;
+}
