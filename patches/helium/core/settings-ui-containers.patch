+#include "chrome/browser/ui/webui/settings/container_settings_handler.h"
+#include "chrome/browser/containers/container_registry.h"
+#include "chrome/browser/profiles/profile.h"
+#include "content/public/browser/web_ui.h"
+
+namespace settings {
+
+ContainerSettingsHandler::ContainerSettingsHandler(Profile* profile)
+    : profile_(profile) {}
+
+ContainerSettingsHandler::~ContainerSettingsHandler() = default;
+
+void ContainerSettingsHandler::OnJavascriptAllowed() {}
+void ContainerSettingsHandler::OnJavascriptDisallowed() {}
+
+void ContainerSettingsHandler::RegisterMessages() {
+  web_ui()->RegisterMessageCallback("getContainers",
+      base::BindRepeating(&ContainerSettingsHandler::HandleGetContainers,
+                          base::Unretained(this)));
+  web_ui()->RegisterMessageCallback("createContainer",
+      base::BindRepeating(&ContainerSettingsHandler::HandleCreateContainer,
+                          base::Unretained(this)));
+}
+
+void ContainerSettingsHandler::HandleGetContainers(const base::Value::List& args) {
+  CHECK_EQ(1U, args.size());
+  const base::Value& callback_id = args[0];
+
+  auto* registry = ContainerRegistry::Get(profile_);
+  base::Value::List containers_list;
+  if (registry) {
+    for (const auto& c : registry->GetAllContainers()) {
+      base::Value::Dict dict;
+      dict.Set("id", c.id);
+      dict.Set("name", c.name);
+      dict.Set("color", c.color);
+      containers_list.Append(std::move(dict));
+    }
+  }
+  ResolveJavascriptCallback(callback_id, containers_list);
+}
